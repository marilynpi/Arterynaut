function Bug(x,y,vx,vy,tipo){
	var shape = new Bitmap();
	shape.graphics.beginFill("#4D2").drawCircle(0,0,10);
	shape.x = x;
	shape.y = y;
	shape.r = 10;
	switch(tipo){
		case 1: shape.damage = 1; shape.hp = 1; break;
		case 2: shape.damage = 1; shape.hp = 1;break;
		case 3: shape.damage = 3; shape.hp = 3;break;
	}
	shape.vx = vx;
	shape.vy = vy;
	bichos.push(shape);
	stage.addChild(shape);
	return shape;
}

function Oxygen(x,y,vx,vy){
	var shape = new Shape();
	shape.graphics.beginFill("#1DF").drawCircle(0,0,5);
	shape.x = x;
	shape.y = y;
	shape.kill = false;
	shape.r = 5;
	shape.vx = vx;
	shape.vy = vy;
	oxygens.push(shape);
	stage.addChild(shape);
	return shape;
}

function updateOxygens(){
	for(var i=0; i<oxygens.length; i++){
		var ox = oxygens[i];
		ox.x += ox.vx;
		ox.y += ox.vy;
		if(ox.x-ox.r>canvas.width || ox.kill){
			Destroy(i,oxygens);
			//setAncho(-1,healthbar);
		}
	}
}

function updateBugs(){
	for(var i=0; i<bichos.length; i++){
		var bg = bichos[i];
		var wall = collCircleWall(bg);
		if(wall){
			BounceShot(bg);
		}
		/*if (collCircle(bg, glob_blancos)) {	
			stage.removeChild(bichos[i]);
			bichos.splice(i,1);bg.
			break;	
		} */

		bg.x += bg.vx;
		bg.y += bg.vy;
		if(bg.x-bg.r>canvas.width){
			Destroy(i,bichos);
			//setAncho(-dam*5,healthbar);
		}
	}
}
